// tsconfig.json
{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": false,
		"moduleResolution": "node",
		"strictNullChecks": false,
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"importHelpers": true,
		"useDefineForClassFields": true,
		"resolveJsonModule": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types"
		]
	},
	"exclude": [
		"node_modules",
		"unpackage",
		"wxcomponents"
	]
}